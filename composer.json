{
  "name": "faisalrizal/modules",
  "description": "Laravel & Lumen Modules",
  "keywords": ["modules", "laravel", "tokolabs"],
  "license": "MIT",
  "authors": [
    {
      "name": "Ahmad Faisal Rizal",
      "email": "faisalrizal@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2.0",
    "league/fractal": "^0.19",
    "dingo/api": "^3.0.0",
    "illuminate/support": "^6.0|^7.0"
  },
  "autoload": {
    "psr-4": {
      "Tokolabs\\Modules\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Tokolabs\\Modules\\ModulesServiceProvider"
      ],
      "aliases": {
        "Module": "Tokolabs\\Modules\\Facades\\Module"
      }
    }
  },
  "suggest": {
    "wikimedia/composer-merge-plugin": "Allows the ability to create and merge composer.json files for your individual modules for module-specific dependency management."
  }
}
